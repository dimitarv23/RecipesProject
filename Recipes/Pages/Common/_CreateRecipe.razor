<div class="row create-recipe" style="border: 15px inset lightgrey; padding: 10px 10px 10px 0; margin: 5px;">
    <div class="col-5">
        <img src="@ImageSource" style="width: 100%; object-fit:contain; border: 3px inset white" />
    </div>

    <div class="col-7 align-items-center" style="padding-right: 50px; padding-bottom: 40px;">
        <div class="align-middle create-recipe-text">
            <h2 class="text-center">
                Create your own Recipe
            </h2>

            <p class="text-center">
                Make your own recipe and add it to our site!
            </p>

            <a href="/addrecipe" class="btn btn-primary">
                Add your recipe
            </a>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string ImageSource { get; set; }
}
